<Window x:Class="Aboba.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Aboba"
        mc:Ignorable="d"
        Height="450"  Width="675"
        Background="Transparent"  AllowsTransparency="True"
        WindowStyle="None" WindowStartupLocation="CenterScreen"  >
    <Border CornerRadius="10" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="2.3*"/>
                <RowDefinition Height="0.5*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" x:Name="category"/>
            <StackPanel x:Name="hhhh" Grid.Row="1">
                
            </StackPanel>
            <Grid Grid.Row="2">
                <Button x:Name="next" Click="next_Click" Content="Next" Background="Bisque" 
                        HorizontalAlignment="Right"
                        Width="100"
                        Margin="10"/>
            </Grid>

        </Grid>

    </Border>
</Window>
